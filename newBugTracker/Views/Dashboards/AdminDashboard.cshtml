@model newBugTracker.Models.DashboardViewModel

@{
	ViewBag.Title = "AdminDashboard";
}

<h3 class="text-center">Admin Dashboard</h3>

<div class="vertical-center">
	<div class="col-md-6">
		<div class="panel panel-danger">
			<div class="panel-heading">
				<h3 class="panel-title">Recent Tickets</h3>
			</div>
			<div class="panel-body">
				<div class="template__table_static template__table_responsive">
					<div class="scrollable scrollbar-macosx">
						<table id="" class="table table_sortable" cellspacing="0" width="100%">
							<thead>
								<tr>
									<th>Title</th>
									<th>Created</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model.AllTickets)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Created</td>
										<td>@Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, null)</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="panel panel-danger">
			<div class="panel-heading">
				<h3 class="panel-title">Projects You're On</h3>
			</div>
			<div class="panel-body">
				<div class="template__table_static template__table_responsive">
					<div class="scrollable scrollbar-macosx">
						<table id="" class="table table_sortable" cellspacing="0" width="100%">
							<thead>
								<tr>
									<th>Projects</th>
								</tr>
							</thead>

							<tbody>
								@foreach (var item in Model.Projects)
								{
									<tr>
										<td>@item.Name</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>